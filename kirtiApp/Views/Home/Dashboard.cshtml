@model List<kirtiApp.Models.Employee>
@{
    ViewData["Title"] = "Dashboard";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <h1 class="float-start">Dashboard</h1> <input type="text" placeholder="Search Here....." id="txtSearch" class="form-control m-1 float-end" style="width:50%" "  />

            </div>

            <table class=" table table-bordered table-dark  table-responsive table-hover table-responsive table-active">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th>Languages</th>
                    <th>Gender</th>
                    <th>JoiningDate</th>
                    <th>Image</th>
                    <th>Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Mobile</td>
                        <td>@item.Address</td>
                        <td>
                            @if (@item.C == true)
                            {
                                <span>C</span>
                            }
                            @if (@item.Python == true)
                            {
                                <span>Python</span>
                            }
                            @if (@item.Cshrap == true)
                            {
                                <span>Cshrap</span>
                            }
                            @if (@item.Java == true)
                            {
                                <span>Java,</span>
                            }
                            @if (@item.PHP == true)
                            {
                                <span>PHP,</span>
                            }
                            @if (@item.Angular == true)
                            {
                                <span>Angular</span>
                            }
                        </td>
                        <td>@item.Gender</td>
                        <td>@item.JoiningDate</td>
                        <td>@item.ImagePath</td>
                        <td><a asp-action="Details" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-info">Details</a></td>
                        <td><a asp-action="Edit" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-warning">Edit</a></td>
                        <td><a asp-action="Delete" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </table>

        </div>

    </div>
</div>
                @section scripts{
    <script src="~/js/custom.js"></script>
}
